<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.uppgift3.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.uppgift3.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_locationsFragment"
            app:destination="@id/locationsFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.uppgift3.LocationsFragment"
        android:label="Locations"
        tools:layout="@layout/fragment_locations">
        <action
            android:id="@+id/action_locationsFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />

        <action
            android:id="@+id/action_locationsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.uppgift3.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather" />


<fragment
android:id="@+id/searchFragment"
android:name="com.example.uppgift3.SearchFragment"
android:label="SÃ¶k plats"
tools:layout="@layout/fragment_search">
<action
    android:id="@+id/action_searchFragment_to_weatherFragment"
    app:destination="@id/weatherFragment">
    <argument
        android:name="cityName"
        app:argType="string" />
</action>
</fragment>

    </navigation>